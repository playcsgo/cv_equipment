<div class="container w-75">
  <h1 class="text-center m-3">Login</h1>
  <div class="form-group m-3">
    {{> message}}
    <form action="/users/login" method="POST">
      <div class="row mb-4">
        <label for="email" class="col-4 col-form-label">信箱</label>
        <div class="col-8">
          <input type="email" class="form-control" id="email" name="email">
        </div>
      </div>
      <div class="row mb-4">
        <label for="password" class="col-4 col-form-label">密碼</label>
        <div class="col-8">
          <input type="password" class="form-control" id="password" name="password">
        </div>
      </div>
      <div class="options">
        <div>
          <button type="submit" class="btn btn-primary">登入</button>
          <a href="/auth/facebook/callback" class="btn btn-primary mx-2"><i class="fa-brands fa-facebook"></i></a>
        </div>
        <a href="/users/signup" class="btn btn-info">註冊帳號</a>
      </div>
    </form>
  </div>
</div>